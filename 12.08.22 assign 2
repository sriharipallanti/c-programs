#include <stdio.h>

int main()
{
    int i,j,n;
    printf("enter n value");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=i;j++)
        {
            printf("*");
            
        }
        printf("\n");
    }
    for(i=n-1;i>=1;i--)
    {
        for(j=1;j<=i;j++)
        {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}


output:enter n value5
*
**
***
****
*****
****
***
**
*
